<div class="row">
  <div class="col-centered"></div>
  <%= form_for @user do |f| %>
    <h2>Редактирование</h2>
    <div class="form-group row">
      <%= f.text_field :username, class: "form-control", size: "3x1", placeholder: "Имя пользователя" %>
    </div>
    <div class="form-group row">
      <%= f.password_field :password, class: "form-control", size: "3x1", placeholder: "Пароль" %>
    </div>
    <div class="row">
      <%= f.submit 'Сохранить', class: 'btn btn-primary btn-block btn-lg' %>
    </div>
  <% end %>
</div>